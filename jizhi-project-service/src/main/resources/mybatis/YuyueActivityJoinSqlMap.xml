<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yuyueActivityJoin" >
  <resultMap id="BaseResultMap" type="com.jizhi.model.YuyueActivityJoin" >
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="activity_open_id" property="activityOpenId" jdbcType="VARCHAR" />
		<result column="activity_id" property="activityId" jdbcType="VARCHAR" />
		<result column="open_id" property="openId" jdbcType="VARCHAR" />
		<result column="nick_name" property="nickName" jdbcType="VARCHAR" />
		<result column="image" property="image" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
	id,activity_open_id,activity_id,open_id,nick_name,image
  </sql>
  
  <insert id="insert" parameterType="com.jizhi.model.YuyueActivityJoin">
  	insert into yuyue_activity_join_#{tbindex} (activity_open_id,activity_id,open_id,nick_name,image) 
  		values (#{activityOpenId},#{activityId},#{openId},#{nickName},#{image})
  </insert>
 
  <select id="queryByActiviyId" resultMap="BaseResultMap" parameterType="java.util.HashMap">
  	select 
  	<include refid="Base_Column_List"></include>
  	from yuyue_activity_join_#{tbindex} where activity_id = #{activityId} 
  	order by id desc
  	limit #{begin},#{size}
  </select>
  
  <select id="queryCountByActivityIdAndOpenId" resultType="Integer" parameterType="java.util.HashMap">
  	select count(1) from yuyue_activity_join_#{tbindex} where activity_id = #{activityId} and open_id = #{openId}
  </select>
  
</mapper>