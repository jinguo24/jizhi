<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="raceJudgeItem" >
  <resultMap id="BaseResultMap" type="com.jizhi.model.RaceJudgeItem" >
  		<id column="lid" property="lid" jdbcType="INTEGER" />
		<result column="id" property="id" jdbcType="VARCHAR" />
		<result column="item_name" property="itemName" jdbcType="VARCHAR" />
		<result column="status" property="status" jdbcType="INTEGER" />
		<result column="scale" property="scale" jdbcType="INTEGER" />
		<result column="type" property="type" jdbcType="INTEGER" />
		<result column="weight" property="weight" jdbcType="DOUBLE" />
		<result column="position" property="position" jdbcType="VARCHAR" />
		<result column="default_value" property="defaultValue" jdbcType="DOUBLE" />
		<result column="sort" property="sort" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
	lid,id,item_name,status,scale,type,weight,position,default_value,sort
  </sql>
  
  <insert id="insert" parameterType="com.jizhi.model.RaceJudgeItem">
  	insert into race_judge_item (id,item_name,status,scale,type,weight,position,default_value,sort) values (#{id},#{itemName},#{status},#{scale},#{type},#{weight},#{position},#{defaultValue},#{sort})
  </insert>
  
  <update id="update" parameterType="com.jizhi.model.RaceJudgeItem">
  	update race_judge_item set 
  	    id = #{id},
  		item_name = #{itemName},
  		scale = #{scale},
  		type = #{type},
  		weight = #{weight},
  		position = #{position},
  		default_value = #{defaultValue},
  		sort = #{sort}
  		 where id=#{id}
  </update>
  
  <select id="query" resultMap="BaseResultMap" parameterType="java.util.HashMap">
  	select 
  	<include refid="Base_Column_List"></include>
  	from race_judge_item where 1=1
  	<if test="scale > 0 " > and scale=#{scale}</if>
  	<if test="type > 0 " > and type=#{type}</if>
  	<if test="status > 0 " > and status=#{status}</if>
  	<if test="position != null and position != '' " > and (position=#{position} or position is null or position = '')</if>
  	order by sort
  </select>
  
  <update id="updateStatus" parameterType="java.util.HashMap">
  	update race_judge_item set status = #{status} where lid = #{id}
  </update>
  
</mapper>